#include <Joystick.h>

// ======================================================
// CONFIGURATION
// ======================================================

// Button pins (change as needed)
const uint8_t buttonPins[] = {2, 3, 4, 5, 6, 7, 8, 9};
const uint8_t NUM_BUTTONS = sizeof(buttonPins) / sizeof(buttonPins[0]);

// Button states
uint8_t lastState[NUM_BUTTONS] = {0};


// ======================================================
// JOYSTICK SETUP
// ======================================================

Joystick_ Joystick;


void setup() {

  // Configure button pins
  for (uint8_t i = 0; i < NUM_BUTTONS; i++) {
    pinMode(buttonPins[i], INPUT_PULLUP);
  }

  Joystick.begin();
}


// ======================================================
// MAIN LOOP
// ======================================================

void loop() {

  for (uint8_t i = 0; i < NUM_BUTTONS; i++) {

    // Read button (active LOW â†’ invert)
    uint8_t current = !digitalRead(buttonPins[i]);

    // Only send change if state differs
    if (current != lastState[i]) {
      Joystick.setButton(i, current);
      lastState[i] = current;
    }
  }

  delay(5);   // small debounce & USB pacing
}
